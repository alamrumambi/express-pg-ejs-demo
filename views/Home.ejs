<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Books</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="container">
  <h2>Books</h2>
  <a class="btn btn-outline-primary" href="/books/add">Add New Book</a>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col">Genre</th>
        <th scope="col">Stock</th>
        <th scope="col">Author</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach((e) => { %>
        <tr>
          <th scope="row"><%= e.id %></th>
          <td><%= e.name %></td>
          <td><%= e.genre %></td>
          <td><%= e.stock %></td>
          <td><%= e.author %></td>
          <td>
            <a href="/books/edit/<%= e.id %>"><button type="button" class="btn btn-warning">Edit</button></a>&nbsp;
            <a href="/books/add/<%= e.id %>"><button type="button" class="btn btn-info">Add</button></a>&nbsp;
            <a href="/books/buy/<%= e.id %>"><button type="button" class="btn btn-primary">Buy</button></a>&nbsp;
            <% if (e.stock == 0) { %>
              <a href="/books/delete/<%= e.id %>"><button type="button" class="btn btn-danger">Delete</button></a>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>