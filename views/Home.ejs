<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">

        <h1>Books DB</h1>

        <a class="btn btn-primary" href="/books/add">Add Book</a>

        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Name</th>
                <th scope="col">Genre</th>
                <th scope="col">Stock</th>
                <th scope="col">Author</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((e) => { %>
                <tr>
                  <th scope="row"><%= e.id %></th>
                  <td><%= e.name %></td>
                  <td><%= e.genre %></td>
                  <td><%= e.stock %></td>
                  <td><%= e.author %></td>
                  <td>
                    <a class="btn btn-success" href="/books/edit/<%= e.id %>">Edit</a>
                    <a class="btn btn-primary" href="/books/add/<%= e.id %>">Add</a>
                    <a class="btn btn-warning" href="/books/buy/<%= e.id %>">Buy</a>
                    <a class="btn btn-danger" href="/books/delete/<%= e.id %>">Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>