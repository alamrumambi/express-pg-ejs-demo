<%- include('./partials/TableStyling', { title: 'Books Data' }) %>
<body>
    <%- include('./partials/Navbar') %>
    <h1>Books</h1>
    <a href="/books/add"><button>Add Book</button></a>
    <hr>
    <form action="/">
        <input type="text" name="search" placeholder="cari nama buku"> &nbsp;
        <button>Cari</button>
    </form>
    <hr>
    <% if (error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>
    <% if (msg) { %>
        <p style="color: rgb(0, 179, 255);"><%= msg %></p>
    <% } %>
    <table>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Genre</th>
          <th>Stock</th>
          <th>Author</th>
          <th>Actions</th>
        </tr>
        <% data.forEach((e) => { %>
            <tr>
              <td><%= e.id %></td>
              <td><%= e.name %></td>
              <td><%= e.genre %></td>
              <td><%= e.stock %></td>
              <td><%= e.author %></td>
              <td>
                <a href="/books/edit/<%= e.id %>"><button>Edit</button></a>
                <a href="/books/add/<%= e.id %>"><button>Add</button></a>
                <a href="/books/buy/<%= e.id %>"><button>Buy</button></a>
                <a href="/books/delete/<%= e.id %>"><button>Delete</button></a>
              </td>
            </tr>
        <% }) %>
      </table>
</body>
</html>