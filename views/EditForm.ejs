<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="container">
  <h2>Update Book</h2>
  <a class="btn btn-outline-primary" href="/">Back to Home</a>
  <hr>
  <form method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input value="<%= book.name %>" name="name" type="text" class="form-control" id="name">
    </div>
    <div class="mb-3"></div>
      <label for="genre" class="form-label">Genre</label>
      <select name="genre" id="genre" class="form-control">
        <option value="">-- Select Genre --</option>
        <% genres.forEach((e) => { %>
          <!-- <% if (book.genre == e) { %>
            <option selected><%= e %></option>
          <% } else { %>
            <option><%= e %></option>
          <% } %> -->
          <option <%= book.genre == e ? 'selected': '' %>><%= e %></option>
        <% }) %>
      </select>
    </div>
    <div class="mb-3"></div>
      <label for="stock" class="form-label">Stock</label>
      <input value="<%= book.stock %>" name="stock" type="number" class="form-control" id="stock">
    </div>
    <div class="mb-3"></div>
      <label for="authorId" class="form-label">Author</label>
      <select name="AuthorId" id="authorId" class="form-control">
        <option value="">-- Select Author --</option>
        <% authors.forEach((e) => { %>
          <option <%= book.AuthorId == e.id ? 'selected': '' %> value="<%= e.id %>"><%= e.name %></option>
        <% }) %>
      </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>